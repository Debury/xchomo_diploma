# Environment Variables for Climate Data ETL Pipeline

# ==================== LLM Configuration ====================
# OpenRouter - Best option (free models available)
# Get key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct:free

# Groq - Alternative (very fast, free tier)
# Get key at: https://console.groq.com
# GROQ_API_KEY=
# GROQ_MODEL=llama-3.1-8b-instant

# Ollama - Local fallback (slow on CPU)
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=qwen2.5:3b

# ==================== Vector Database ====================
QDRANT_HOST=qdrant
QDRANT_REST_PORT=6333

# ==================== CDS API Configuration ====================
# Get your API key from: https://cds.climate.copernicus.eu/api-how-to
CDSAPI_URL=https://cds.climate.copernicus.eu/api/v2
CDSAPI_KEY=example-key

# ==================== Data Directories ====================
DATA_RAW_DIR=data/raw
DATA_PROCESSED_DIR=data/processed
LOGS_DIR=logs

# ==================== Pipeline Configuration ====================
PIPELINE_CONFIG=config/pipeline_config.yaml
ERA5_CONFIG=config/era5_config.yaml

# ==================== Logging Configuration ====================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==================== Processing Options ====================
NORMALIZE_DATA=true
AGGREGATION_METHOD=mean
EXPORT_FORMATS=netcdf,parquet

# ==================== Performance Settings ====================
CHUNK_SIZE=1000
MAX_WORKERS=4
MEMORY_LIMIT_GB=8

# ==================== Development Options ====================
DEBUG_MODE=false
ENABLE_PROFILING=false
# ==================== Authentication ====================
# Simple auth for the web UI (change in production!)
AUTH_USERNAME=admin
AUTH_PASSWORD=climate2024